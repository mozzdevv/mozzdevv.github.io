---
import { cn } from '@/utils/cn';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'div'> {
  align?: 'start' | 'center' | 'end';
  side?: 'top' | 'bottom';
  sideOffset?: number;
}

const { 
  align = 'center', 
  side = 'bottom', 
  sideOffset = 4,
  class: className, 
  ...props 
} = Astro.props;

const alignClasses = {
  start: 'left-0',
  center: 'left-1/2 -translate-x-1/2',
  end: 'right-0',
};

const sideClasses = {
  top: 'bottom-full mb-1',
  bottom: 'top-full mt-1',
};

const classes = cn(
  'absolute z-50 w-64 rounded-md border bg-popover p-4 text-popover-foreground shadow-md outline-none',
  alignClasses[align],
  sideClasses[side],
  className
);
---

<div
  class={classes}
  style={side === 'bottom' ? `margin-top: ${sideOffset}px` : `margin-bottom: ${sideOffset}px`}
  data-hover-card-content
  hidden
  {...props}
>
  <slot />
</div>
