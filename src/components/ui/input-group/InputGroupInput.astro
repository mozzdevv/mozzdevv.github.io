---
import { cn } from "@/utils/cn";
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"input"> {
  type?: "text" | "email" | "password" | "search" | "tel" | "url" | "number";
  placeholder?: string;
  disabled?: boolean;
  required?: boolean;
  name?: string;
  id?: string;
  value?: string;
}

const {
  type = "text",
  placeholder,
  disabled = false,
  required = false,
  name,
  id,
  value,
  class: className,
  ...props
} = Astro.props;

const classes = cn(
  "flex-1 min-w-0 h-9 px-3 py-2 text-sm bg-transparent",
  "placeholder:text-muted-foreground",
  "focus:outline-none",
  "disabled:cursor-not-allowed disabled:opacity-50",
  className
);
---

<input
  type={type}
  class={classes}
  placeholder={placeholder}
  disabled={disabled}
  required={required}
  name={name}
  id={id}
  value={value}
  data-slot="input-group-control"
  {...props}
/>
