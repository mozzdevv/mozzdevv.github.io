---
import Command from "@/components/ui/command/Command.astro";
import PopoverContent from "@/components/ui/popover/PopoverContent.astro";
import { cn } from "@/utils/cn";
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"div"> {
  align?: "start" | "center" | "end";
  side?: "top" | "right" | "bottom" | "left";
}

const {
  align = "start",
  side = "bottom",
  class: className,
  ...props
} = Astro.props;
---

<PopoverContent
  align={align}
  side={side}
  class={cn("w-full min-w-[220px] p-0", className)}
  {...props}
>
  <Command class="rounded-md border-0 shadow-none">
    <slot />
  </Command>
</PopoverContent>
