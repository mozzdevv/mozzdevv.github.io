---
import CommandItem from "@/components/ui/command/CommandItem.astro";
import Check from "@/components/fundations/icons/Check.astro";
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"div"> {
  value: string;
  label?: string;
  description?: string;
  meta?: string;
  disabled?: boolean;
}

const {
  value,
  label,
  description,
  meta,
  disabled = false,
  class: className,
  ...props
} = Astro.props;
---

<CommandItem
  value={value}
  disabled={disabled}
  class={className}
  data-combobox-item
  data-label={label}
  {...props}
>
  <slot name="leading" />
  <div class="flex min-w-0 flex-1 flex-col">
    <span class="truncate">{label || <slot />}</span>
    {description && (
      <span class="truncate text-sm text-muted-foreground">{description}</span>
    )}
  </div>
  {meta && <span class="text-xs text-muted-foreground">{meta}</span>}
  <slot name="trailing" />
  <Check
    size="sm"
    class="text-current opacity-0 transition-opacity"
    data-combobox-item-indicator
    aria-hidden="true"
  />
</CommandItem>
