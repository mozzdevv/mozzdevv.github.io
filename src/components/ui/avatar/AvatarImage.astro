---
import { cn } from '@/utils/cn';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'img'> {
  src: string;
  alt: string;
}

const {
  src,
  alt,
  class: className,
  ...props
} = Astro.props;

const classes = cn('absolute inset-0 aspect-square h-full w-full object-cover z-10', className);
---

<img 
  src={src} 
  alt={alt} 
  class={classes}
  onerror="this.style.display='none'"
  {...props} 
/>
