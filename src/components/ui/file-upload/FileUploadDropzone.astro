---
import { cn } from '@/utils/cn';
import type { HTMLAttributes } from 'astro/types';
import Upload from "@lucide/astro/icons/upload";

export interface Props extends HTMLAttributes<'div'> {}

const { class: className, ...props } = Astro.props;

const classes = cn(
  'flex min-h-32 cursor-pointer flex-col items-center justify-center gap-2 rounded-lg border border-dashed border-muted-foreground/25 px-6 py-8 text-center transition-colors',
  'hover:border-muted-foreground/50 hover:bg-muted/50',
  'data-[drag-over=true]:border-primary data-[drag-over=true]:bg-primary/5',
  className
);
---

<div class={classes} data-file-upload-dropzone {...props}>
  <slot>
    <Upload class="size-6 text-muted-foreground" />
    <div class="text-sm text-muted-foreground">
      <span class="font-medium text-foreground">Click to upload</span> or drag and drop
    </div>
    <p class="text-xs text-muted-foreground">SVG, PNG, JPG or GIF</p>
  </slot>
</div>
