---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'input'> {
  name?: string;
  multiple?: boolean;
  accept?: string;
}

const { name, multiple = false, accept, ...props } = Astro.props;
---

<input
  type="file"
  name={name}
  multiple={multiple}
  accept={accept}
  class="sr-only"
  data-file-upload-input
  {...props}
/>
