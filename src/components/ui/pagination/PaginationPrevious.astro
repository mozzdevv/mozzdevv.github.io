---
import { cn } from "@/utils/cn";
import type { HTMLAttributes } from "astro/types";
import ChevronLeft from "@lucide/astro/icons/chevron-left";

export interface Props extends HTMLAttributes<"a"> {
  href?: string;
}

const {
  href = "#",
  class: className,
  ...props
} = Astro.props;

const classes = cn(
  "inline-flex items-center justify-center gap-1 pl-2.5 pr-4 h-9 rounded-md text-sm font-medium",
  "transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2",
  "hover:bg-accent hover:text-accent-foreground",
  className
);
---

<a href={href} aria-label="Go to previous page" class={classes} {...props}>
  <ChevronLeft class="size-4" />
  <span><slot>Previous</slot></span>
</a>
