---
import { cn } from '@/utils/cn';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'tfoot'> {}

const { class: className, ...props } = Astro.props;

const classes = cn('border-t bg-muted/50 font-medium [&>tr]:last:border-b-0', className);
---

<tfoot class={classes} {...props}>
  <slot />
</tfoot>
