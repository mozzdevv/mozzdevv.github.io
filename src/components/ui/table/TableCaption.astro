---
import { cn } from '@/utils/cn';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'caption'> {}

const { class: className, ...props } = Astro.props;

const classes = cn('mt-4 text-sm text-muted-foreground', className);
---

<caption class={classes} {...props}>
  <slot />
</caption>
