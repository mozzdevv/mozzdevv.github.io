---
// Theme Preview - Uses hardcoded elements with CSS variables
// for proper theme application
import Cards from "./preview/Cards.astro";
import Buttons from "./preview/Buttons.astro";
import Inputs from "./preview/Inputs.astro";
import Avatars from "./preview/Avatars.astro";
import Progress from "./preview/Progress.astro";
import Switches from "./preview/Switches.astro";
---

<div
  class="flex-1 overflow-y-auto scrollbar-hide p-6 lg:p-10"
  id="preview-container"
>
  <div class="space-y-4" data-theme-preview>
    <!-- Stats Cards Row -->
    <Cards />

    <!-- Main Content Row -->
    <div class="grid lg:grid-cols-2 gap-4">
      <!-- Form Card -->
      <Inputs />

      <!-- Team Members Card -->
      <Avatars />
    </div>

    <!-- Bottom Row -->
    <div class="grid lg:grid-cols-2 gap-4">
      <!-- Notifications Card -->
      <Switches />

      <!-- Progress Card -->
      <Progress />
    </div>

    <!-- Buttons Row -->
    <Buttons />
  </div>

  <!-- Border overlay - sits on top of scrollbars -->
  <div
    class="pointer-events-none absolute inset-0 rounded-lg lg:rounded-2xl ring-1 ring-inset ring-border"
  >
  </div>
</div>
