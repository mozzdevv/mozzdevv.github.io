---
// Hardcoded avatar/team elements for theme preview
// Uses CSS variables directly for proper theme application
---

<!-- Team Members Card -->
<div
  class="bg-[var(--card)] text-[var(--card-foreground)]"
  style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
>
  <div class="space-y-1.5 pb-4">
    <h3
      class="text-lg font-semibold leading-none"
      style="text-transform: var(--heading-transform); letter-spacing: var(--heading-tracking); font-size: calc(1.125rem * var(--text-scale));"
    >
      Team Members
    </h3>
    <p class="text-sm text-[var(--muted-foreground)]">
      Manage your team and permissions.
    </p>
  </div>

  <div class="space-y-4">
    <!-- Member 1 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <!-- Avatar - always rounded-full -->
        <div
          class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full"
        >
          <img
            src="/images/avatars/mike.png"
            alt="Mike"
            class="aspect-square h-full w-full object-cover"
          />
        </div>
        <div>
          <p class="text-sm font-medium leading-none">Mike Andreuzza</p>
          <p class="text-xs text-[var(--muted-foreground)]">mike@example.com</p>
        </div>
      </div>
      <!-- Badge - uses smaller fixed radius -->
      <span
        class="inline-flex items-center rounded-md border border-transparent bg-[var(--primary)] px-2.5 py-0.5 text-xs font-semibold text-[var(--primary-foreground)]"
      >
        Admin
      </span>
    </div>

    <!-- Member 2 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div
          class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full"
        >
          <img
            src="/images/avatars/steve.png"
            alt="Steve"
            class="aspect-square h-full w-full object-cover"
          />
        </div>
        <div>
          <p class="text-sm font-medium leading-none">Steve Ruiz</p>
          <p class="text-xs text-[var(--muted-foreground)]">
            steve@example.com
          </p>
        </div>
      </div>
      <!-- Badge - uses smaller fixed radius -->
      <span
        class="inline-flex items-center rounded-md border border-transparent bg-[var(--secondary)] px-2.5 py-0.5 text-xs font-semibold text-[var(--secondary-foreground)]"
      >
        Member
      </span>
    </div>

    <!-- Member 3 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div
          class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full"
        >
          <img
            src="/images/avatars/fred.png"
            alt="Fred"
            class="aspect-square h-full w-full object-cover"
          />
        </div>
        <div>
          <p class="text-sm font-medium leading-none">Fred Schott</p>
          <p class="text-xs text-[var(--muted-foreground)]">fred@example.com</p>
        </div>
      </div>
      <!-- Badge - uses smaller fixed radius -->
      <span
        class="inline-flex items-center rounded-md border border-[var(--border)] bg-transparent px-2.5 py-0.5 text-xs font-semibold text-[var(--foreground)]"
      >
        Viewer
      </span>
    </div>
  </div>
</div>
