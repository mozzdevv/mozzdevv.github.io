---
// Hardcoded progress bar elements for theme preview
// Uses CSS variables directly for proper theme application
---

<!-- Progress Card -->
<div 
  class="bg-[var(--card)] text-[var(--card-foreground)]"
  style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
>
  <div class="space-y-1.5 pb-4">
    <h3 class="text-lg font-semibold leading-none" style="text-transform: var(--heading-transform); letter-spacing: var(--heading-tracking); font-size: calc(1.125rem * var(--text-scale));">Project Progress</h3>
    <p class="text-sm text-[var(--muted-foreground)]">Track your project milestones.</p>
  </div>
  
  <div class="space-y-4">
    <!-- Design Progress -->
    <div class="space-y-2">
      <div class="flex justify-between text-sm">
        <span>Design</span>
        <span class="text-[var(--muted-foreground)]">100%</span>
      </div>
      <div class="relative h-2 w-full overflow-hidden rounded-full bg-[var(--secondary)]">
        <div class="h-full rounded-full bg-[var(--primary)] transition-all" style="width: 100%"></div>
      </div>
    </div>
    
    <!-- Development Progress -->
    <div class="space-y-2">
      <div class="flex justify-between text-sm">
        <span>Development</span>
        <span class="text-[var(--muted-foreground)]">65%</span>
      </div>
      <div class="relative h-2 w-full overflow-hidden rounded-full bg-[var(--secondary)]">
        <div class="h-full rounded-full bg-[var(--primary)] transition-all" style="width: 65%"></div>
      </div>
    </div>
    
    <!-- Testing Progress -->
    <div class="space-y-2">
      <div class="flex justify-between text-sm">
        <span>Testing</span>
        <span class="text-[var(--muted-foreground)]">25%</span>
      </div>
      <div class="relative h-2 w-full overflow-hidden rounded-full bg-[var(--secondary)]">
        <div class="h-full rounded-full bg-[var(--primary)] transition-all" style="width: 25%"></div>
      </div>
    </div>
  </div>
</div>
