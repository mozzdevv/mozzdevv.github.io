---
// Hardcoded button elements for theme preview
// Uses CSS variables directly for proper theme application
---

<!-- Buttons Section -->
<div 
  class="bg-[var(--card)] text-[var(--card-foreground)]"
  style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
>
  <div class="space-y-1.5 pb-4">
    <h3 class="text-lg font-semibold leading-none" style="text-transform: var(--heading-transform); letter-spacing: var(--heading-tracking); font-size: calc(1.125rem * var(--text-scale));">Actions</h3>
    <p class="text-sm text-[var(--muted-foreground)]">Button variants and states.</p>
  </div>
  <div class="flex flex-wrap gap-3">
    <!-- Primary Button -->
    <button 
      class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium h-9 px-4 py-2 bg-[var(--primary)] text-[var(--primary-foreground)] hover:opacity-90 transition-opacity"
      style="border-radius: var(--button-radius);"
    >
      Primary
    </button>
    
    <!-- Secondary Button -->
    <button 
      class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium h-9 px-4 py-2 bg-[var(--secondary)] text-[var(--secondary-foreground)] hover:opacity-80 transition-opacity"
      style="border-radius: var(--button-radius);"
    >
      Secondary
    </button>
    
    <!-- Outline Button -->
    <button 
      class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium h-9 px-4 py-2 border border-[var(--input)] bg-[var(--background)] text-[var(--foreground)] hover:bg-[var(--accent)] hover:text-[var(--accent-foreground)] transition-colors"
      style="border-radius: var(--button-radius);"
    >
      Outline
    </button>
    
    <!-- Ghost Button -->
    <button 
      class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium h-9 px-4 py-2 text-[var(--foreground)] hover:bg-[var(--accent)] hover:text-[var(--accent-foreground)] transition-colors"
      style="border-radius: var(--button-radius);"
    >
      Ghost
    </button>
    
    <!-- Destructive Button -->
    <button 
      class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium h-9 px-4 py-2 bg-[var(--destructive)] text-[var(--destructive-foreground)] hover:opacity-90 transition-opacity"
      style="border-radius: var(--button-radius);"
    >
      Destructive
    </button>
  </div>
</div>
