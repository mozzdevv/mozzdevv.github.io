---
// Hardcoded switch elements for theme preview
// Uses CSS variables directly for proper theme application
import Bell from "@lucide/astro/icons/bell";
import Settings from "@lucide/astro/icons/settings";
---

<!-- Notifications Card -->
<div 
  class="bg-[var(--card)] text-[var(--card-foreground)]"
  style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
>
  <div class="space-y-1.5 pb-4">
    <h3 class="text-lg font-semibold leading-none" style="text-transform: var(--heading-transform); letter-spacing: var(--heading-tracking); font-size: calc(1.125rem * var(--text-scale));">Notifications</h3>
    <p class="text-sm text-[var(--muted-foreground)]">Configure your notification preferences.</p>
  </div>
  
  <div class="space-y-4">
    <!-- Push Notifications - ON -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <Bell class="size-4 text-[var(--muted-foreground)]" />
        <div>
          <p class="text-sm font-medium">Push Notifications</p>
          <p class="text-xs text-[var(--muted-foreground)]">Receive push notifications</p>
        </div>
      </div>
      <!-- Switch ON - always rounded-full -->
      <button type="button" role="switch" aria-checked="true" class="peer inline-flex h-5 w-9 shrink-0 cursor-pointer items-center rounded-full border-2 border-transparent shadow-sm transition-colors bg-[var(--primary)]">
        <span class="pointer-events-none block h-4 w-4 rounded-full bg-[var(--background)] shadow-lg ring-0 transition-transform translate-x-4"></span>
      </button>
    </div>
    
    <!-- Marketing Emails - OFF -->
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <Settings class="size-4 text-[var(--muted-foreground)]" />
        <div>
          <p class="text-sm font-medium">Marketing Emails</p>
          <p class="text-xs text-[var(--muted-foreground)]">Receive marketing emails</p>
        </div>
      </div>
      <!-- Switch OFF - always rounded-full -->
      <button type="button" role="switch" aria-checked="false" class="peer inline-flex h-5 w-9 shrink-0 cursor-pointer items-center rounded-full border-2 border-transparent shadow-sm transition-colors bg-[var(--input)]">
        <span class="pointer-events-none block h-4 w-4 rounded-full bg-[var(--background)] shadow-lg ring-0 transition-transform translate-x-0"></span>
      </button>
    </div>
  </div>
</div>
