---
// Hardcoded card elements for theme preview
// Uses CSS variables directly for proper theme application
import TrendingUp from "@lucide/astro/icons/trending-up";
import Users from "@lucide/astro/icons/users";
import CreditCard from "@lucide/astro/icons/credit-card";
import Activity from "@lucide/astro/icons/activity";
---

<!-- Stats Cards Grid -->
<div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
  <!-- Revenue Card -->
  <div 
    class="bg-[var(--card)] text-[var(--card-foreground)]"
    style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
  >
    <div class="flex items-center justify-between pb-2">
      <span class="text-sm font-medium">Revenue</span>
      <TrendingUp class="size-4 text-[var(--muted-foreground)]" />
    </div>
    <div class="text-2xl font-bold" style="font-size: calc(1.5rem * var(--text-scale));">$45,231</div>
    <p class="text-xs text-[var(--muted-foreground)]">+20.1% from last month</p>
  </div>

  <!-- Users Card -->
  <div 
    class="bg-[var(--card)] text-[var(--card-foreground)]"
    style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
  >
    <div class="flex items-center justify-between pb-2">
      <span class="text-sm font-medium">Users</span>
      <Users class="size-4 text-[var(--muted-foreground)]" />
    </div>
    <div class="text-2xl font-bold" style="font-size: calc(1.5rem * var(--text-scale));">+2,350</div>
    <p class="text-xs text-[var(--muted-foreground)]">+180 this week</p>
  </div>

  <!-- Sales Card -->
  <div 
    class="bg-[var(--card)] text-[var(--card-foreground)]"
    style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
  >
    <div class="flex items-center justify-between pb-2">
      <span class="text-sm font-medium">Sales</span>
      <CreditCard class="size-4 text-[var(--muted-foreground)]" />
    </div>
    <div class="text-2xl font-bold" style="font-size: calc(1.5rem * var(--text-scale));">+12,234</div>
    <p class="text-xs text-[var(--muted-foreground)]">+19% from last month</p>
  </div>

  <!-- Active Card -->
  <div 
    class="bg-[var(--card)] text-[var(--card-foreground)]"
    style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
  >
    <div class="flex items-center justify-between pb-2">
      <span class="text-sm font-medium">Active</span>
      <Activity class="size-4 text-[var(--muted-foreground)]" />
    </div>
    <div class="text-2xl font-bold" style="font-size: calc(1.5rem * var(--text-scale));">+573</div>
    <p class="text-xs text-[var(--muted-foreground)]">+201 since last hour</p>
  </div>
</div>
