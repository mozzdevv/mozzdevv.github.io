---
// Hardcoded input elements for theme preview
// Uses CSS variables directly for proper theme application
---

<!-- Form Card -->
<div 
  class="bg-[var(--card)] text-[var(--card-foreground)]"
  style="border-radius: var(--radius); border: var(--card-border) solid var(--border); padding: var(--card-padding); box-shadow: var(--card-shadow);"
>
  <div class="space-y-1.5 pb-4">
    <h3 class="text-lg font-semibold leading-none" style="text-transform: var(--heading-transform); letter-spacing: var(--heading-tracking); font-size: calc(1.125rem * var(--text-scale));">Create Account</h3>
    <p class="text-sm text-[var(--muted-foreground)]">Enter your details to get started.</p>
  </div>
  
  <div class="space-y-4">
    <!-- Name Input -->
    <div class="space-y-2">
      <label class="text-sm font-medium leading-none">Name</label>
      <input 
        type="text" 
        placeholder="John Doe"
        class="block h-9 w-full border border-[var(--border)] bg-[var(--background)] px-4 py-2 text-sm leading-tight text-[var(--foreground)] placeholder:text-[var(--muted-foreground)] focus:outline-none focus:border-[var(--primary)] focus:ring-[3px] focus:ring-[var(--primary)]/5"
        style="border-radius: var(--radius);"
      />
    </div>
    
    <!-- Email Input -->
    <div class="space-y-2">
      <label class="text-sm font-medium leading-none">Email</label>
      <input 
        type="email" 
        placeholder="john@example.com"
        class="block h-9 w-full border border-[var(--border)] bg-[var(--background)] px-4 py-2 text-sm leading-tight text-[var(--foreground)] placeholder:text-[var(--muted-foreground)] focus:outline-none focus:border-[var(--primary)] focus:ring-[3px] focus:ring-[var(--primary)]/5"
        style="border-radius: var(--radius);"
      />
    </div>
    
    <!-- Checkbox - uses smaller radius -->
    <div class="flex items-center gap-2">
      <div class="size-4 shrink-0 rounded-sm border border-[var(--primary)] bg-[var(--primary)] flex items-center justify-center">
        <svg class="size-3 text-[var(--primary-foreground)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <label class="text-sm font-normal leading-none">Accept terms and conditions</label>
    </div>
  </div>
  
  <!-- Submit Button -->
  <div class="pt-4">
    <button 
      class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium h-9 px-4 py-2 w-full bg-[var(--primary)] text-[var(--primary-foreground)] hover:opacity-90 transition-opacity"
      style="border-radius: var(--button-radius);"
    >
      Create Account
    </button>
  </div>
</div>
