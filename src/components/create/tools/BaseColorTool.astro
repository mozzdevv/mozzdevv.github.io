---
import DropdownMenu from "@/components/ui/dropdown-menu/DropdownMenu.astro";
import DropdownMenuTrigger from "@/components/ui/dropdown-menu/DropdownMenuTrigger.astro";
import DropdownMenuContent from "@/components/ui/dropdown-menu/DropdownMenuContent.astro";
import DropdownMenuItem from "@/components/ui/dropdown-menu/DropdownMenuItem.astro";
import Check from "@lucide/astro/icons/check";
import Moon from "@lucide/astro/icons/moon";
import Sun from "@lucide/astro/icons/sun";
import { baseColorOptions } from "../data/base-colors";
---

<DropdownMenu class="block w-full" keepOpen>
  <DropdownMenuTrigger class="w-full">
    <div
      class="flex items-center gap-2 py-3 px-2 rounded-md hover:bg-accent cursor-pointer transition-colors w-full"
    >
      <div class="bg-muted p-2 rounded">
        <span
          id="base-color-dot"
          class="block size-4 rounded-full bg-neutral-500"></span>
      </div>
      <div class="text-left">
        <div class="text-xs text-muted-foreground">Base Color</div>
        <div id="base-color-label" class="text-sm font-medium text-foreground">
          Neutral
        </div>
      </div>
    </div>
  </DropdownMenuTrigger>
  <DropdownMenuContent side="left" class="w-56">
    <!-- Dark Mode Toggle -->
    <div>
      <button
        type="button"
        id="dropdown-theme-toggle"
        class="w-full rounded-md hover:bg-accent px-2 py-2 transition-colors text-left"
      >
        <div class="flex items-center gap-2">
          <div class="flex items-center">
            <Moon class="size-3 text-muted-foreground dark:hidden" />
            <Sun class="size-3 text-muted-foreground hidden dark:block" />
          </div>
          <h3
            class="text-sm font-medium text-foreground"
            id="theme-toggle-label"
          >
            Switch to Dark Mode
          </h3>
        </div>
        <p class="text-xs text-muted-foreground">
          Base colors are easier to see in dark mode.
        </p>
      </button>
    </div>
    <div class="mt-1">
      <!-- Color Options -->
      {
        baseColorOptions.map((color) => (
          <DropdownMenuItem
            data-base-color={color.value}
            class="justify-between"
          >
            <div class="flex items-center gap-3">
              <span class={`size-4 rounded-full bg-${color.value}-500`} />
              <span>{color.name}</span>
            </div>
            <Check class="size-4 opacity-0" data-check />
          </DropdownMenuItem>
        ))
      }
    </div>
  </DropdownMenuContent>
</DropdownMenu>
<script>
  function initDropdownThemeToggle() {
    const toggleBtn = document.getElementById("dropdown-theme-toggle");
    const toggleLabel = document.getElementById("theme-toggle-label");
    if (toggleBtn) {
      toggleBtn.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation();
        const isDark = document.documentElement.classList.contains("dark");
        if (isDark) {
          document.documentElement.classList.remove("dark");
          localStorage.setItem("theme", "light");
          if (toggleLabel) toggleLabel.textContent = "Switch to Dark Mode";
        } else {
          document.documentElement.classList.add("dark");
          localStorage.setItem("theme", "dark");
          if (toggleLabel) toggleLabel.textContent = "Switch to Light Mode";
        }
      });
      // Set initial label
      const isDark = document.documentElement.classList.contains("dark");
      if (toggleLabel) {
        toggleLabel.textContent = isDark
          ? "Switch to Light Mode"
          : "Switch to Dark Mode";
      }
    }
  }
  initDropdownThemeToggle();
  document.addEventListener("astro:page-load", initDropdownThemeToggle);
</script>
