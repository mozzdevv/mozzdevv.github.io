---
import Button from "@/components/ui/button/Button.astro";
import ChevronLeft from "@lucide/astro/icons/chevron-left";
import ChevronRight from "@lucide/astro/icons/chevron-right";

export interface Props {
  prevPage?: { href: string; title: string } | null;
  nextPage?: { href: string; title: string } | null;
}

const { prevPage, nextPage } = Astro.props;
---

<div class="flex items-center gap-1">
  {
    prevPage ? (
      <Button
        href={prevPage.href}
        variant="secondary"
        size="xs"
        iconOnly
        title={`Previous: ${prevPage.title}`}
        data-pagination-prev
      >
        <ChevronLeft />
      </Button>
    ) : (
      <Button variant="secondary" size="xs" iconOnly disabled>
        <ChevronLeft />
      </Button>
    )
  }
  {
    nextPage ? (
      <Button
        href={nextPage.href}
        variant="secondary"
        size="xs"
        iconOnly
        title={`Next: ${nextPage.title}`}
        data-pagination-next
      >
        <ChevronRight />
      </Button>
    ) : (
      <Button variant="secondary" size="xs" iconOnly disabled>
        <ChevronRight />
      </Button>
    )
  }
</div>
