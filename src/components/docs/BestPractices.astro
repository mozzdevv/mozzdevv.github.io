---
import { cn } from "@/utils/cn";

export interface Props {
  class?: string;
  columns?: 1 | 2 | 3;
}

const { class: className, columns = 2 } = Astro.props;

const columnClasses: Record<1 | 2 | 3, string> = {
  1: "sm:grid-cols-1",
  2: "sm:grid-cols-2",
  3: "sm:grid-cols-3",
};

const classes = cn("grid gap-4", columnClasses[columns], className);
---

<div class={classes}>
  <slot />
</div>
