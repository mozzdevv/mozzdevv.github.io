---
import experienceData from '@/data/experience.json';
const { jobs } = experienceData;
---
<section class="mb-16">
  <span class="text-xs font-bold uppercase tracking-widest text-muted-foreground mb-10 block border-b border-border pb-2 w-24">Experience</span>

  {jobs.map((job) => (
    <div class="mb-16 last:mb-0">
      <div class="mb-4">
        <div class="text-2xl font-semibold mb-1 leading-tight">{job.role}</div>
        <div class="font-mono text-sm text-muted-foreground">{job.company} | {job.period}</div>
      </div>
      <div class="text-muted-foreground font-light">
        <ul class="list-none pl-0 space-y-3">
          {job.points.map((point) => (
            <li class="relative pl-5 before:content-['â€”'] before:absolute before:left-0 before:opacity-50 leading-relaxed text-base">
              {point}
            </li>
          ))}
        </ul>
      </div>
    </div>
  ))}
</section>
