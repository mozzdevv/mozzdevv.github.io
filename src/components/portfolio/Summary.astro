---
import summaryData from '@/data/summary.json';
const { summaryText, differentiatorLabel, differentiatorText, education } = summaryData;
---
<section class="mb-16">
  <span class="text-xs font-bold uppercase tracking-widest text-muted-foreground mb-10 block border-b border-border pb-2 w-24">Summary</span>
  
  <div class="mb-10">
    <p class="text-xl leading-relaxed mb-5 font-light">
      {summaryText}
    </p>
    <p class="text-lg leading-relaxed text-muted-foreground font-light">
      <strong class="text-foreground">{differentiatorLabel}</strong> {differentiatorText}
    </p>
  </div>
</section>

<section class="mb-16">
  <span class="text-xs font-bold uppercase tracking-widest text-muted-foreground mb-10 block border-b border-border pb-2 w-24">Education</span>
  
  {education.map(edu => (
    <div class="mb-4">
      <div class="text-2xl font-semibold mb-2">{edu.institution}</div>
      <ul class="list-none pl-0 space-y-2 text-muted-foreground font-light">
        {edu.degrees.map(degree => (
          <li class="relative pl-5 before:content-['â€”'] before:absolute before:left-0 before:opacity-50">{degree}</li>
        ))}
      </ul>
    </div>
  ))}
</section>
