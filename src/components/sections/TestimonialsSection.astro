---
import testimonialsData from "@/data/sections/testimonials.json";
---

<section id="testimonials" class="py-20 sm:py-24">
  <div class="mx-auto max-w-4xl px-6 lg:px-8">
    <h2 class="text-3xl font-bold tracking-tight sm:text-4xl text-foreground mb-12">
      {testimonialsData.sectionTitle}
    </h2>

    <div class="grid gap-6 sm:grid-cols-2">
      {testimonialsData.testimonials.map((testimonial: { quote: string; name: string; role: string; avatar: string }) => (
        <div class="rounded-xl border border-border bg-card p-6 shadow-sm">
          <div class="mb-4">
            <svg class="w-8 h-8 text-primary/30" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>
          <blockquote class="text-sm leading-relaxed text-muted-foreground mb-4">
            "{testimonial.quote}"
          </blockquote>
          <div class="flex items-center gap-3">
            {testimonial.avatar ? (
              <img src={testimonial.avatar} alt={testimonial.name} class="w-10 h-10 rounded-full object-cover" />
            ) : (
              <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                <span class="text-sm font-semibold text-primary">
                  {testimonial.name.split(' ').map((n: string) => n[0]).join('')}
                </span>
              </div>
            )}
            <div>
              <p class="text-sm font-semibold text-foreground">{testimonial.name}</p>
              <p class="text-xs text-muted-foreground">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
