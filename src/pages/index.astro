---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Sidebar from '@/components/portfolio/Sidebar.astro';
import Summary from '@/components/portfolio/Summary.astro';
import Experience from '@/components/portfolio/Experience.astro';
---

<BaseLayout showNavigation={false} showFooter={false}>
  <div class="flex flex-col lg:flex-row min-h-screen">
    <!-- Sidebar -->
    <aside class="lg:w-[35%] lg:fixed lg:top-0 lg:left-0 lg:h-screen p-10 lg:p-14 flex flex-col border-b lg:border-b-0 lg:border-r border-border bg-muted overflow-y-auto">
      <Sidebar />
    </aside>

    <!-- Main Content -->
    <main class="lg:w-[65%] lg:ml-[35%] p-10 lg:p-14 lg:py-20 overflow-y-auto">
      <Summary />
      <Experience />
    </main>
  </div>
</BaseLayout>
